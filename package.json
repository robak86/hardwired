{
  "name": "hardwired",
  "version": "0.0.4",
  "description": "Minimalistic type-safe dependencies container",
  "private": true,
  "scripts": {
    "start": "tsc -b packages/tsconfig.json --watch --pretty",
    "build": "yarn build:esm && yarn build:cjs",
    "build:esm": "tsc -b packages/tsconfig.json --pretty",
    "build:cjs": "yarn build:cjs:core && yarn build:cjs:react",
    "build:cjs:core": "cd packages/core && tsc --outDir ./dist/cjs --module commonjs",
    "build:cjs:react": "cd packages/react && tsc --outDir ./dist/cjs --module commonjs",
    "build:cjs:clear": "cd packages/react && tsc --outDir ./dist/cjs --module commonjs",
    "build:cjs:prepublish": "node --loader ts-node/esm scripts/prepublish.ts",
    "prepublishOnly": "yarn build:cjs:clear && yarn build:cjs:prepublish",
    "test": "yarn run vitest --config ./vitest.config.ts",
    "test:coverage": "yarn run vitest --config ./vitest.config.ts --coverage --run",
    "postinstall": "yarn run update:tsconfig.json && yarn run update:package.json",
    "update:tsconfig.json": "node --loader ts-node/esm scripts/update-package-tsconfig.ts",
    "update:package.json": "node --loader ts-node/esm scripts/update-package-json.ts",
    "purge": "rimraf packages/**/dist/* packages/**/*.tsbuildinfo node_modules packages/**/node_modules",
    "format": "prettier --write 'packages/**/src/**/*.{ts,tsx,js}'",
    "lint": "eslint 'packages/**/*.{!d.ts,ts,tsx}'"
  },
  "author": "Tomasz Robaczewski",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn build && yarn test"
    }
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "yarn format",
      "yarn lint"
    ]
  },
  "devDependencies": {
    "@testing-library/react": "^13.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/airbnb__node-memwatch": "^2.0.0",
    "@types/node": "^18.7.1",
    "@types/react": "^18.0.6",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "c8": "^7.12.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "happy-dom": "^6.0.4",
    "husky": "^4.2.5",
    "lint-staged": "^11.1.2",
    "prettier": "^2.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.21",
    "ts-expect": "^1.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "vite": "^3.0.7",
    "vitest": "^0.21.1"
  },
  "dependencies": {
    "memoize-one": "^5.1.1",
    "utility-types": "^3.10.0"
  }
}
