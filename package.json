{
  "name": "hardwired",
  "version": "0.0.1",
  "description": "Minimalistic type-safe dependencies container",
  "private": true,
  "scripts": {
    "start": "tsc -b packages/tsconfig.json --watch --pretty --synchronousWatchDirectory",
    "test": "yarn run jest --config jest.config.js",
    "test:watch": "yarn run jest --config jest.config.js --watch",
    "postinstall": "yarn run purge && yarn run update:tsconfig.json && yarn run update:package.json",
    "update:tsconfig.json": "ts-node scripts/update-package-tsconfig.ts",
    "update:package.json": "ts-node scripts/update-package-json.ts",
    "purge": "rimraf packages/**/lib/* packages/**/*.tsbuildinfo",
    "build:compile": "tsc",
    "build:link": "yarn run build:copy && cd ./packages/lib && yarn link && yarn install --production",
    "build:coverage": "nyc --reporter=text-lcov mocha -- -- spec packages/**/__test__/*.test.js | coveralls",
    "build:coverage:local": "nyc mocha -- -- spec packages/**/__test__/*.test.js"
  },
  "author": "Tomasz Robaczewski",
  "license": "ISC",
  "peerDependencies": {
    "lodash": "^4.17.11"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/benchmark": "^1.0.33",
    "@types/jest": "^25.2.2",
    "@types/node": "^13.13.2",
    "@types/ramda": "^0.27.6",
    "benny": "^3.6.14",
    "concurrently": "^5.2.0",
    "jest": "^26.0.1",
    "nyc": "^15.0.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.19",
    "ts-expect": "^1.1.0",
    "ts-jest": "^26.0.0",
    "ts-node": "^8.10.1",
    "tslint": "^6.1.2",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "ramda": "^0.27.0",
    "utility-types": "^3.10.0"
  }
}
