{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./src",
    "composite": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "noEmit": true
  },
  "references": [
    {
      "path": "../core/tsconfig.json"
    },
    {
      "path": "../react-di/tsconfig.json"
    },
    {
      "path": "../redux-di/tsconfig.json"
    }
  ],
  "include": [
    "./src"
  ],
  "exclude": [
    "./tests",
    "./lib"
  ]
}
